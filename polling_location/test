import time
from time import strftime

def convert_to_time(time):
    # TODO: convert time strings into a time format--ie 1000 to 10:00
    if time:
        time_str = str(int(time))
        if len(time_str) == 4:
            hours = time_str[0:2]
            mins = time_str[2:]
            time_str = hours + ":" + mins
            return time_str
        elif len(time_str) == 3:
            hours = time_str[0]
            mins = time_str[1:]
            time_str = hours + ":" + mins
            return time_str
        else:
            # print 'Hours were not in the proper format in line ' + str(index) + '.'
            return ''
    else:
        return ""

def convert_to_uct(time_str, time_zone):
    new_time = convert_to_time(time_str)
    str = new_time + ":00" + time_zone
    return str


